							<ValTextField fx:id="IfscCode" maxLength="30"  prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" target="foreignBankDetailsController.type.ibanSwiftCode" allowedChars="[a-zA-Z0-9]" autoCaps="true"/>
